{
  "manifest_version": 3,
  "name": "EXT_TEST",
  "version": "0.1",
  "description": "Some bs atm",
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Show settings"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/content.js"]
    }
  ]
}